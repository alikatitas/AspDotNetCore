@using SQLitePCL
@model List<StoreApp.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

            @foreach(StoreApp.Models.Product item in Model){
                <h1>@item.ProductId</h1>
                <h2>@item.ProductName</h2>
                <h3>@item.Price</h3>
                <p><a href="/Product/Get/@item.ProductId">Get Details</a></p>
                } 
</body>
</html>